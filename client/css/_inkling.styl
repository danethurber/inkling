.inkling-editor,
.inkling-preview
  width: 50%
  position: fixed
  top: 0
  bottom: 0
  padding: 20px

.inkling-editor
  left: 0

.inkling-editor-tools
  nav-list()
  border-bottom: 1px solid $border-color
  padding-bottom: 18px

.inkling-editor-tool
  margin: 0 10px
  color: $gray-light

  &:hover
    color: $gray-dark
    cursor: pointer

.inkling-editor-input
  width: 100%
  height: 100%
  border: none
  overflow: auto
  outline: none
  box-shadow: none

.inkling-preview
  right: 0
  background-color: $gray-lighter
